@model CoinPayment_POC.Models.OrderModel
@{
    <div class="container text-center text-light p-3 font-monospace">
        <h1>Pay Bill</h1>
        <form class="mt-3" asp-controller="CoinPayments" asp-action="MakePayment" method="post">
           <div class="bg-light p-3" style="border-top:3px solid #26dadd">
                <div class="row">
                    <div class="col-6">
                        <h3 style="font-family:monospace,monospace; color: #2726dd">
                            Bill Details
                        </h3>
                        <table class="table text-dark fw-bold">

                            @Html.HiddenFor(model => model.OrderId)

                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.PaymentDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.PaymentDate)
                                        @Html.HiddenFor(model => model.PaymentDate)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.PaymentAmount)
                                    </td>
                                    <td>
                                        $@Html.DisplayFor(model => model.PaymentAmount)
                                        @Html.HiddenFor(model => model.PaymentAmount)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.ProductName)
                                        @Html.HiddenFor(model => model.ProductName)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-6">
                        <h3 style="font-family:monospace,monospace; color: #2726dd">
                            Billing Info
                        </h3>
                        <table class="table text-dark fw-bold">
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.FirstName)
                                    @Html.HiddenFor(model => model.FirstName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.MiddleName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.MiddleName)
                                    @Html.HiddenFor(model => model.MiddleName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.LastName)
                                    @Html.HiddenFor(model => model.LastName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ServiceAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.ServiceAddress)
                                    @Html.HiddenFor(model => model.ServiceAddress)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.MailingAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.MailingAddress)
                                    @Html.HiddenFor(model => model.MailingAddress)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.EmailAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.EmailAddress)
                                    @Html.HiddenFor(model => model.EmailAddress)
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <input type="submit" 
                class="btn rounded-pill text-dark box-shadow"
                value="Make Payment"
                style="font-family:monospace, monospace; font-size:18px; font-weight:bold; background-color:#ffbf3f" />
                <span>
                    <p class="mt-2">
                        <img src="~/images/pngfind.com-centurylink-logo-png-6483786.png" alt="Coinpayments Logo" style="width: 10%;" />
                    </p>
                </span>
           </div>
        </form>
    </div>
}
 