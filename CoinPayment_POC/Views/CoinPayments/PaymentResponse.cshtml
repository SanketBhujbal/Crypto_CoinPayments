@{
    ViewData["Title"] = "Payment Response";
}
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <style>
        .response-text {
            text-align: center
        }
    </style>

    @if (!string.IsNullOrEmpty(ViewBag.OrderNumber))
    {
        <div class="response-text">
            <hr />
            <h2>Thank you</h2>
            <hr />
            Your order has been successfully processed! <br /> <br />
            ORDER NUMBER: @ViewBag.OrderNumber
        </div>
    }
    else
    {
        <div class="response-text">
            <hr />
            <h2>Sorry, your order has been cancelled</h2>
        </div>
    }
}
