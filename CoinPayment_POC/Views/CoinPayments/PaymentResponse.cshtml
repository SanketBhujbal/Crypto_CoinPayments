@{
    ViewData["Title"] = "Payment Response";
}
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="container bg-light mt-5" style="border-top: 3px solid #26dadd">

    <h3 class="p-2">
        @{

            @if (!string.IsNullOrEmpty(ViewBag.OrderNumber))
            {
                <div class="text-success">
                    Your payment has been successfully processed!<br />
                    Txn ID: @ViewBag.OrderNumber
                </div>
            }
            else
            {

                <div class="text-danger">
                    Sorry, There was some problem with your payment. Please try again!
                </div>

            }
        }
    </h3>

</div>