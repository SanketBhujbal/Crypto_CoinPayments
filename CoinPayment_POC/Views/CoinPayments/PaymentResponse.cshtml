@{
    ViewData["Title"] = "Payment Response";
}
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="container bg-light mt-5" style="border-top: 3px solid #26dadd">

    <h3 class="p-2" style="font-family: monospace,monospace;">
        @{
            
            @if (!string.IsNullOrEmpty(ViewBag.OrderNumber))
            {
                <div class="text-success">
                    Your order has been successfully processed!<br/>
                    ORDER NUMBER: @ViewBag.OrderNumber
                </div>
            }
            else
            {

                <div class="text-danger">
                    Sorry, your order has been cancelled!
                </div>

            }
        }
    </h3>

</div>

